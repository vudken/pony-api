<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #101010;
            color: white;
            font-family: 'Poppins', sans-serif;
        }

        .sidebar {
            background-color: #181818;
            height: 100vh;
            padding: 1.5rem 1rem 1.5rem 2.5rem;
            width: 260px;
            position: fixed;
            transition: transform 0.3s ease;
        }

        .sidebar.collapsed {
            transform: translateX(-100%);
        }

        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-bottom: 1.5rem;
        }

        .sidebar h4 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #fff;
            margin: 0;
            margin-left: 2rem;
        }

        .sidebar a {
            color: #bdbdbd;
            text-decoration: none;
            padding: 0.8rem 1rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            border-radius: 0.5rem;
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }

        .sidebar a:hover {
            background-color: #292929;
            color: #fff;
        }

        .sidebar a.active {
            background-color: #3f3f3f;
            color: #fff;
        }

        .sidebar .mt-auto {
            margin-top: auto;
        }

        .sidebar .profile {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            border-radius: 8px;
        }

        .sidebar .profile:hover {
            background-color: #292929;
        }

        .sidebar .profile img {
            width: 45px;
            height: 45px;
            border-radius: 50%;
        }

        .sidebar .profile span {
            font-size: 1rem;
            color: white;
            font-weight: 600;
        }

        .content {
            margin-left: 260px;
            padding: 2rem;
            transition: margin-left 0.3s ease;
        }

        .content.collapsed {
            margin-left: 0;
        }

        .toggle-sidebar {
            position: fixed;
            top: 1rem;
            left: 1rem;
            background-color: #181818;
            border: none;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            cursor: pointer;
            z-index: 1000;
            display: none;
        }

        .search-bar {
            background-color: #333;
            border: none;
            color: white;
            padding: 0.6rem 1.5rem;
            border-radius: 30px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            width: 30%;
        }

        .search-bar::placeholder {
            color: #bdbdbd;
        }

        .search-bar .search-icon {
            font-size: 1.2rem;
            color: #bdbdbd;
        }

        .dashboard-header {
            font-size: 2.5rem;
            font-weight: 700;
            color: #fff;
        }

        .table-container {
            margin-top: 1.5rem;
            background-color: #181818;
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.3);
        }

        .table-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .table-header h4 {
            font-size: 2rem;
            font-weight: 600;
            color: #fff;
            margin: 0;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            color: white;
            font-size: 0.9rem;
        }

        th {
            background-color: #292929;
            text-transform: uppercase;
            padding: 1rem;
            text-align: left;
        }

        td {
            padding: 1rem;
            border-bottom: 1px solid #333;
        }

        tbody tr:hover {
            background-color: #333;
        }

        .badge {
            padding: 0.4rem 0.7rem;
            border-radius: 12px;
            font-size: 0.75rem;
        }

        .badge-info {
            background-color: #17a2b8;
            color: #fff;
        }

        .badge-warning {
            background-color: #ffc107;
            color: #fff;
        }

        .badge-primary {
            background-color: #007bff;
            color: #fff;
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .content {
                margin-left: 0;
            }

            .toggle-sidebar {
                display: block;
            }
        }
    </style>
</head>

<body>
    <button class="toggle-sidebar">â˜°</button>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column">
            <div class="sidebar-header">
                <h4>Green Box</h4>
            </div>
            <a href="#" data-section="home" class="active"><i class="bi bi-house"></i> Home</a>
            <a href="#" data-section="statistics"><i class="bi bi-bar-chart"></i> Statistics</a>
            <a href="#" data-section="products"><i class="bi bi-box"></i>Admin</a>
            <a href="#" data-section="products"><i class="bi bi-calendar-event""></i>Calendar</a>
            <div class="mt-auto">
                <div class="profile">
                    <img src="https://avatar.iran.liara.run/public/17" alt="Profile">
                    <span>Stoner</span>
                </div>
                <a href="#" class="mt-3"><i class="bi bi-question-circle"></i> Help</a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="content w-100">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="dashboard-header">Dashboard</h1>
                <div class="search-bar">
                    <i class="bi bi-search search-icon"></i>
                    <input type="search" placeholder="Search..."
                        style="background: none; border: none; outline: none; color: white; flex: 1;">
                </div>
            </div>

            <!-- Dynamic Content Section -->
            <div id="dynamic-content">
                <div class="table-container">
                    <div class="table-header">
                        <h4>Fertilizer tanks</h4>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>PH</th>
                                <th>EC</th>
                                <th>Description</th>
                                <th>Stage</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Donel Chamberlain</td>
                                <td><span class="badge badge-primary">7.2</span></td>
                                <td><span class="badge badge-info">1.5</span></td>
                                <td>Healthy Sample</td>
                                <td>Stage 1</td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Maria Anders</td>
                                <td><span class="badge badge-primary">6.8</span></td>
                                <td><span class="badge badge-info">1.2</span></td>
                                <td>Slightly Acidic</td>
                                <td>Stage 2</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        const toggleButton = document.querySelector('.toggle-sidebar');
        const sidebar = document.querySelector('.sidebar');
        const content = document.querySelector('.content');
        const links = document.querySelectorAll('.sidebar a');
        const dynamicContent = document.getElementById('dynamic-content');

        const updateToggleButtonVisibility = () => {
            if (window.innerWidth <= 768) {
                toggleButton.style.display = 'block';
            } else {
                toggleButton.style.display = 'none';
                sidebar.classList.remove('show');
            }
        };

        toggleButton.addEventListener('click', () => {
            sidebar.classList.toggle('show');
        });

        links.forEach(link => {
            link.addEventListener('click', async (event) => {
                event.preventDefault();
                links.forEach(link => link.classList.remove('active'));
                link.classList.add('active');

                const section = link.dataset.section;

                try {
                    const response = await fetch(`/sections/${section}.ejs`);
                    if (response.ok) {
                        const html = await response.text();
                        dynamicContent.innerHTML = html;
                        if (window.innerWidth <= 768) {
                            sidebar.classList.remove('show');
                        }
                    } else {
                        dynamicContent.innerHTML = `<p class="text-danger">Failed to load content. Please try again later.</p>`;
                    }
                } catch (error) {
                    console.error('Error loading content:', error);
                    dynamicContent.innerHTML = `<p class="text-danger">An error occurred. Please try again.</p>`;
                }
            });
        });

        window.addEventListener('resize', updateToggleButtonVisibility);

        // Initial setup
        updateToggleButtonVisibility();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>

</html>