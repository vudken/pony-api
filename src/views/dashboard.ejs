<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Green Box Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    {#
    <link href="/src/css/dashboard.css" rel="stylesheet"> #}
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        main {
            flex: 1;
        }

        .table-container {
            overflow-x: auto;
        }

        .logout-btn {
            background-color: #17a2b8;
            color: white;
            border-radius: 25px;
            font-weight: bold;
        }

        .logout-btn:hover {
            background-color: #138496;
            color: white;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Green Box Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="btn logout-btn" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-5">
        <div class="row">
            <div class="col">
                <h1 class="mb-4 text-center text-success">Green Box Data Dashboard</h1>

                <div class="card shadow">
                    <div class="card-header bg-success text-white text-center">
                        <h4>Data Overview</h4>
                    </div>
                    <div class="card-body table-container">
                        <table class="table table-hover table-bordered w-100">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>PH</th>
                                    <th>EC</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody id="table-body">
                                <!-- Default Loading Spinner -->
                                <tr>
                                    <td colspan="4" class="text-center">
                                        <div class="spinner-border text-success" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                        <p class="mt-2 text-muted">Fetching data, please wait...</p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 p-4 text-center">
        <p class="mb-0">&copy; 2025 Green Box Dashboard. All Rights Reserved.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="../js/dashboard.js"></script>
</body>

</html>