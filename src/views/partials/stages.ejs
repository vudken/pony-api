<style>
    /* MODAL BACKDROP */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    /* MODAL CONTENT */
    .modal-content {
        background-color: #181818;
        padding: 20px;
        border-radius: 8px;
        width: 400px;
        max-width: 90%;
        text-align: center;
        color: white;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
    }

    /* MODAL TITLE */
    .modal-title {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    /* CLOSE BUTTON */
    .close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 1.5rem;
        cursor: pointer;
    }

    /* INPUT STYLING */
    .modal-content input {
        width: 100%;
        padding: 10px;
        margin-top: 8px;
        border: 1px solid #333;
        border-radius: 5px;
        background: #222;
        color: white;
    }

    /* COLOR PICKER */
    #colorOptions {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 10px;
    }

    .color-circle {
        width: 25px;
        height: 25px;
        border-radius: 50%;
        display: inline-block;
        cursor: pointer;
        border: 2px solid transparent;
    }

    .color-circle.selected {
        border: 2px solid white;
    }

    .stage-card {
        max-height: 75vh;
        /* ✅ Makes the table take up to 75% of the viewport height */
        overflow-y: auto;
        /* ✅ Enables scrolling if content overflows */
        margin-bottom: 1rem;
        /* ✅ Adds spacing below the table */
        position: relative;
        /* ✅ Ensures button is positioned properly */
    }

    .stage-card::-webkit-scrollbar {
        width: 8px;
        /* ✅ Slimmer scrollbar */
    }

    .stage-card::-webkit-scrollbar-track {
        background: #222;
        /* ✅ Dark background to blend with UI */
        border-radius: 10px;
    }

    .stage-card::-webkit-scrollbar-thumb {
        background: #555;
        /* ✅ Modern grey thumb */
        border-radius: 10px;
    }

    .stage-card::-webkit-scrollbar-thumb:hover {
        background: #777;
        /* ✅ Lighter color on hover */
    }

    .stage-buttons {
        display: flex;
        justify-content: flex-end;
        /* Push buttons to the right */
        gap: 10px;
        /* Add some spacing between buttons */
        padding-top: 10px;
        /* Space from the table */
    }
</style>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-white">Production Stages</h2>
            <div class="stage-card p-4 rounded bg-dark text-white">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Stage</th>
                            <th>Duration (Days)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="stage-list">
                        <% stages.forEach((stage, index)=> { %>
                            <tr data-index="<%= index %>">
                                <td>
                                    <span style="display: inline-flex; align-items: center; gap: 8px;">
                                        <span
                                            style="width: 15px; height: 15px; background: <%= stage.color %>; border-radius: 50%; display: inline-block;"></span>
                                        <%= stage.name %>
                                    </span>
                                </td>
                                <td>
                                    <%= stage.duration %>
                                </td>
                                <td>
                                    <button class="btn btn-danger btn-sm remove-stage"
                                        data-index="<%= index %>">Remove</button>
                                </td>
                                <td class="sort-controls">
                                    <button class="btn btn-link move-stage" data-index="<%= index %>">
                                        <i class="bi bi-arrows-expand"></i>
                                    </button>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <!-- <button class="btn btn-success mt-3" id="add-stage">Add New Stage</button> -->
            </div>
            <div class="stage-buttons d-flex justify-content-between">
                <button class="btn btn-success" id="add-stage-btn">Add New Stage</button>
                <button class="btn btn-danger" id="remove-all-stages">Remove All Stages</button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL BACKDROP -->
<div id="addStageModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h4 class="modal-title">Add New Stage</h4>

        <!-- Stage Name -->
        <label for="stageName">Stage Name:</label>
        <input type="text" id="stageName" placeholder="Enter stage name" required>

        <!-- Duration -->
        <label for="stageDuration">Duration (Days):</label>
        <input type="number" id="stageDuration" min="1" placeholder="Enter duration" required>

        <!-- Color Picker -->
        <label>Choose Color:</label>
        <div id="colorOptions">
            <% colors.forEach(color=> { %>
                <span class="color-circle" data-color="<%= color %>" style="background: <%= color %>;"></span>
                <% }) %>
        </div>
        <input type="hidden" id="selectedColor" value="<%= colors[0] %>">

        <!-- Submit Button -->
        <button class="btn btn-primary mt-3" id="submitStage">Submit</button>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.15.0/Sortable.min.js"></script>
<script src="assets/js/stages.js"></script>